extends ./layout.pug


block content
  div.controls
    div.form-group.inputs
      label Disks
      input(id='blockCount' class='textInput' type='text' placeholder='5' value='5')
    div.form-group.inputs
      label Start
      input(id='startStack' class='textInput' type='text' placeholder='L' value='L')
    div.form-group.inputs
      label Target
      input(id='targetStack' class='textInput' type='text' placeholder='C' value='C')
    div.form-group
      label.checkboxLabel Animations
      div.boxes
        input(type='checkbox' id='transitions' checked value='true')
        label(for='transitions')
    div.form-group.buttons
      button.btn#start Solve
      button.btn#reset Reset
  div.solverContainer
    div.board
      div.score
        div#totalScore.scoreItem
          | Total Moves: 
          span#totalScore 0
        div#targetScore.scoreItem
          | Target Moves: 
          span#targetScore 0
      div.base
      div#stickOne.stick
      div#stickTwo.stick
      div#stickThree.stick

block js
  script(src="/my-projects/hanoi-towers/js/main.js")